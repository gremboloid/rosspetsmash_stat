{% extends "@layouts/main.twig" %}
	{% use "@layouts/content.twig" %}
	{% block html_title %}
		{{ title }}
	{% endblock %}
	{% block content_container %}
	 {{ parent() }}
	 {% endblock %}
	{% block content %}									
			<div id="main-page" class="clearfix">
				<div class="cl4 fl">
					<div class="main-block">
						<div class="content-wrapper">
							<div class="content-header">
								<h2>{{ news_section }}</h2>
							</div>
							<div class="content clearfix">	
							{% if show_news %}
							
								<div class="news">
							{% if news_list is iterable %}
							{% for news in news_list %}
									<div class="blocknews">
								{% if news.Name %}
									<div class="blocknews-head">
										<p class="date"></p>
										<h3><a class="newsheader" href="/news/{{ news.Id }}">{{ news.Name }}</a></h3>							
									</div>
								{% endif %}
									{% if news.Anons %}
									<div class="blocknews-anons">
										{{ news.Anons|raw }}
									</div>
									{% endif %}
									<div class="block-news-content">
										{{ news.Text|raw }}
									</div>
									</div>
									{% endfor %}
							{% endif %}
								</div>	
								{% endif %}
							</div>							
							
						</div>
					</div>
				</div>
				<div class="cl4 fl">
